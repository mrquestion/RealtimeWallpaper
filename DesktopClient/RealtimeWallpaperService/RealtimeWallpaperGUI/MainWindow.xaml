<Window x:Class="RealtimeWallpaperGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Realtime Wallpaper"
        Height="400"
        Width="300"
        Unloaded="Window_Unloaded">
    <StackPanel>
        <TextBox Name="Host"></TextBox>
        <Button Name="Start"
            MinHeight="100"
            Click="Start_Click"
            >
            변경 시작
        </Button>
        <Button Name="Stop"
            MinHeight="100"
            Click="Stop_Click"
            >
            변경 중단
        </Button>
        <TextBox Name="Log" Height="100"></TextBox>
    </StackPanel>
</Window>
